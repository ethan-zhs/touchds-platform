{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "moduleResolution": "node",
        "allowJs": true,
        "noUnusedParameters": false,
        "paths": {
            "@src/*": ["src/*"],
            "@public/*": ["src/statics/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@global/*": ["src/global/*"],
            "@utils/*": ["src/utils/*"],
            "@hoc/*": ["src/hoc/*"],
            "@service/*": ["src/services/*"]
        },
        "baseUrl": "./",
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "./src/**/*",
        "./runtime/**/*",
        "./node_modules/@itouchtv/react-components-crud/**/*"
    ]
}
